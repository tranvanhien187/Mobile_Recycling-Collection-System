<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RecyclingCollectionSystem" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CheckboxTheme" parent="Theme.AppCompat" />

    <style name="CheckboxTheme.GREEN_00ad31">
        <item name="colorAccent">@color/green_00ad31</item>
        <item name="colorControlNormal">#F2F4F6</item>
    </style>

    <style name="Theme.App" parent="Theme.MaterialComponents">
        ...
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/grey_858e9c</item>
        <item name="colorOnPrimary">@color/green_00ad31</item>
    </style>
    <style name="TabLayoutTradingPlace">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14dp</item>
    </style>
</resources>