<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/transactionDetailBody"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingVertical="20dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/body_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/corner_primary_bg"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="2dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:src="@drawable/ic_recycle"
                tools:text="15,00" />

            <TextView
                android:id="@+id/tvHistoryId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/proximanova_sbold"
                android:text="@string/save_your_life_and_our_planet_label"
                android:textColor="@color/black_354052"
                android:textSize="14sp"
                tools:text="0178aa4a-4f8a-41f1-8051-1575fb7b702a" />

            <LinearLayout
                android:id="@+id/layout_content_transaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_bottom_light_white_16dp"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_transaction_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/divider_transaction"
                        android:layout_width="0dp"
                        android:layout_height="1.5dp"
                        android:background="@color/grey_dfe3e9"
                        app:layout_constraintBottom_toTopOf="@+id/tvNameLabel"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvNameLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="9dp"
                        android:fontFamily="@font/proximanova_reg"
                        android:text="@string/name_label"
                        android:textColor="@color/grey_7f8fa4"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toTopOf="@+id/tvName"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/divider_transaction" />

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="18dp"
                        android:layout_marginBottom="9dp"
                        android:fontFamily="@font/proximanova_reg"
                        android:maxLines="2"
                        android:textColor="@color/black_354052"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvNameLabel"
                        app:layout_goneMarginEnd="8dp"
                        tools:text="Tran Van Hien" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@color/grey_dfe3e9" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="18dp"
                    android:fontFamily="@font/proximanova_reg"
                    android:text="@string/address_label"
                    android:textColor="@color/grey_7f8fa4"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginBottom="9dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/proximanova_reg"
                    android:lines="1"
                    android:textColor="@color/black_354052"
                    android:textSize="14sp"
                    tools:text="K90/27 Đống Đa, Hải Châu, Đà Nẵng" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@color/grey_dfe3e9" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="18dp"
                    android:fontFamily="@font/proximanova_reg"
                    android:text="@string/weight_label"
                    android:textColor="@color/grey_7f8fa4"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/tvWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginBottom="4dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/proximanova_reg"
                    android:importantForAutofill="no"
                    android:inputType="numberDecimal"
                    android:textColor="@color/black_354052"
                    android:textSize="14sp"
                    tools:ignore="LabelFor"
                    tools:text="Đà Nẵng" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginBottom="9dp"
                    android:fontFamily="@font/proximanova_reg"
                    android:text="@string/your_garbage_weight_must_be_more_than_2kg_label"
                    android:textColor="@color/green_00ad31"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@color/grey_dfe3e9" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="18dp"
                    android:fontFamily="@font/proximanova_reg"
                    android:text="@string/evidence_label"
                    android:textColor="@color/grey_7f8fa4"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/ivEvidence"
                    android:layout_marginTop="9dp"
                    android:src="@drawable/ic_cam"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:scaleType="fitCenter" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@color/grey_dfe3e9" />

                <TextView
                    android:id="@+id/btnComplete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginVertical="24dp"
                    android:layout_marginBottom="9dp"
                    android:background="@drawable/bg_primary_button"
                    android:enabled="true"
                    android:gravity="center"
                    android:paddingVertical="14dp"
                    android:text="@string/complete_label"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
