<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_background_header"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_shadow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back_2" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/proximanova_sbold"
        android:text="@string/complete_transport_form_label"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/ivBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivBack" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_primary_bg"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:id="@+id/tvTransportId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/proximanova_sbold"
                android:textColor="@color/black_354052"
                android:textSize="14sp"
                tools:text="017ae4a-123jund-acve123-3cd" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@drawable/dashed_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/proximanova_reg"
                android:text="@string/customer_name_label"
                android:textColor="@color/grey_7f8fa4"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/proximanova_reg"
                android:textColor="@color/black_354052"
                android:textSize="14sp"
                tools:text="Tran Van Hien" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/proximanova_reg"
                android:text="@string/address_label"
                android:textColor="@color/grey_7f8fa4"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/proximanova_reg"
                android:textColor="@color/black_354052"
                android:textSize="14sp"
                tools:text="K90/27 Đống Đa, Hải Châu, Đà Nẵng" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/proximanova_reg"
                android:text="@string/phone_number_label"
                android:textColor="@color/grey_7f8fa4"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="9dp"
                android:fontFamily="@font/proximanova_reg"
                android:textColor="@color/black_354052"
                android:textSize="14sp"
                tools:text="089987191" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@drawable/dashed_line" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvGiftBrand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/proximanova_reg"
                    android:textColor="@color/black_354052"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Iphone 14 pro max" />

                <TextView
                    android:id="@+id/tvGiftName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="18dp"
                    android:fontFamily="@font/proximanova_sbold"
                    android:textColor="@color/black_354052"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ivGift"
                    app:layout_constraintTop_toTopOf="@id/ivGift"
                    tools:text="Iphone 14 pro max" />

                <TextView
                    android:id="@+id/tvGiftDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginBottom="16dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/proximanova_reg"
                    android:maxLines="3"
                    android:textColor="@color/black_354052"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ivGift"
                    app:layout_constraintTop_toBottomOf="@id/tvGiftName"
                    app:layout_constraintVertical_bias="0"
                    tools:text="The iPhone 11 succeeded the iPhone XR, and it features a 6.1-inch LCD display that Apple calls a Liquid Retina HD Display. It features a 1792 x..." />

                <ImageView
                    android:id="@+id/ivGift"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvGiftBrand"
                    app:layout_constraintVertical_bias="0"
                    tools:src="@drawable/image_default_image_rectangle" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/proximanova_reg"
                android:text="@string/evidence_label"
                android:textColor="@color/grey_7f8fa4"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/ivEvidence"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="9dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_pick_image" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_gift_blue_outline"
        app:layout_constraintBottom_toTopOf="@id/cvInfo"
        app:layout_constraintEnd_toEndOf="@id/cvInfo"
        app:layout_constraintStart_toStartOf="@id/cvInfo"
        app:layout_constraintTop_toTopOf="@id/cvInfo" />

    <TextView
        android:id="@+id/btnComplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="24dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/bg_primary_button"
        android:enabled="true"
        android:gravity="center"
        android:paddingVertical="14dp"
        android:text="@string/complete_label"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
