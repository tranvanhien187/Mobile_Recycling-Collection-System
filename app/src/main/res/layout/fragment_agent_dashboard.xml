<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/ivAvatar"
            android:background="@drawable/bg_gradient_home"/>

        <TextView
            android:id="@+id/tvLabelWellcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/proximanova_sbold"
            android:text="@string/welcome_back_label"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btnSetting"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="24dp"
            android:contentDescription="@string/empty_value"
            android:src="@drawable/ic_setting"
            app:layout_constraintBottom_toBottomOf="@id/tvLabelWellcome"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvLabelWellcome" />

        <TextView
            android:id="@+id/tvGarbageWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/proximanova_sbold"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvUsername"
            tools:text="Equivalents to 150 kilograms trash has been recycle, congrats!" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivBorderStroke"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/bg_border_3_orange_ffddad"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            app:shapeAppearanceOverlay="@style/CustomShapeOVerlay50P" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivAvatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="@+id/ivBorderStroke"
            app:layout_constraintEnd_toEndOf="@+id/ivBorderStroke"
            app:layout_constraintStart_toStartOf="@+id/ivBorderStroke"
            app:layout_constraintTop_toTopOf="@id/ivBorderStroke"
            app:shapeAppearanceOverlay="@style/CustomShapeOVerlay50P"
            tools:background="#E5E5E5"
            tools:src="@drawable/ic_person" />

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivBorderStroke"
            tools:text="Tran Van Hien" />

        <ImageView
            android:id="@+id/ivMyTPlace"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:contentDescription="@string/empty_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvGarbageWeight" />

        <ImageView
            android:id="@+id/iVMyGift"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:contentDescription="@string/empty_value"
            android:src="@drawable/ic_shipping"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ivTrophy"
            app:layout_constraintStart_toEndOf="@id/ivMyTPlace"
            app:layout_constraintTop_toBottomOf="@id/tvGarbageWeight" />

        <ImageView
            android:id="@+id/ivTrophy"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:contentDescription="@string/empty_value"
            app:layout_constraintEnd_toStartOf="@id/ivHistory"
            app:layout_constraintStart_toEndOf="@id/iVMyGift"
            app:layout_constraintTop_toBottomOf="@id/tvGarbageWeight" />

        <ImageView
            android:id="@+id/ivHistory"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:contentDescription="@string/empty_value"
            android:src="@drawable/ic_history"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvGarbageWeight" />

        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@id/ivHistory"
            android:id="@+id/clChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:background="@color/white"
            android:elevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tvTotalWeightTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/proximanova_reg"
                android:text="@string/total"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTotalWeightValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/proximanova_bold"
                android:textColor="@color/black"
                android:textSize="32dp"
                app:layout_constraintStart_toStartOf="@id/tvTotalWeightTitle"
                app:layout_constraintTop_toBottomOf="@id/tvTotalWeightTitle"
                tools:text="5.987,34" />

            <TextView
                android:id="@+id/tvUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/proximanova_reg"
                android:text="@string/kilograms_trash"
                android:textColor="@color/grey_4f4f4f"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="@id/tvTotalWeightValue"
                app:layout_constraintTop_toBottomOf="@id/tvTotalWeightValue" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="30dp"
                android:padding="5dp"
                android:src="@drawable/ic_exclamation_mark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/vLineCenter"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="26dp"
                android:background="@color/grey_f0f0f0"
                app:layout_constraintTop_toBottomOf="@id/tvUnit" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chartWeighPerDay"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginVertical="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vLineCenter" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
